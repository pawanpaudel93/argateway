{
  "name": "argateway",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.8.0",
  "description": "ArGateway is a library for managing and selecting Arweave gateways based on various routing methods. It provides a caching mechanism for efficient gateway selection and retrieval of online gateways.",
  "author": "Pawan Paudel <pawanpaudel93@gmail.com>",
  "license": "GNU General Public License v3.0",
  "funding": "https: //github.com/sponsors/pawanpaudel93",
  "homepage": "https://github.com/pawanpaudel93/argateway#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawanpaudel93/argateway.git"
  },
  "bugs": "https://github.com/pawanpaudel93/argateway/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "postinstall": "ts-patch install"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "node-localstorage": "^3.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.4",
    "@antfu/ni": "^0.21.8",
    "@antfu/utils": "^0.7.6",
    "@types/node": "^20.7.1",
    "@types/node-localstorage": "^1.3.1",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "esno": "^0.17.0",
    "lint-staged": "^14.0.1",
    "pnpm": "^8.8.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "ts-patch": "^3.0.2",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
